@model AgainWebApp.Services.ViewsModels.Identity.LoginViewModel
@{
    ViewBag.Title = "Вход в систему";
    Layout = "LayoutSimple";
}

<div class="form-signin">
    <form asp-action="Register">
        <h1 class="h3 mb-3 fw-normal"> Регистрация Пользователя</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="UserName" class="form-control" placeholder="Login"/>
            <label asp-for="UserName" ></label>
            <span  asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Password" class="form-control" placeholder="Password"/>
            <label asp-for="Password" ></label>
            <span  asp-validation-for="Password" class="text-danger"></span>
        </div>
        
        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe" />
            </label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Войти</button>
    </form>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/SigIn.css" />
}